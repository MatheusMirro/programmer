package senhas;
import java.util.Scanner;


public class Senhas {

    
    public static void main(String[] args) {
        
        int senhaMestre, senhaTentativa;
        double n1, n2, soma;
        
        Scanner leitura = new Scanner (System.in);
        
        System.out.println("Cadastre sua senha (Apenas Numeros): ");
        
        senhaMestre = leitura.nextInt();
        
        System.out.println("Digite o primeiro valor: ");
        n1 = leitura.nextDouble();
        System.out.println("Digite o segundo valor: ");
        n2 = leitura.nextDouble();
        
        soma = n1 + n2;
        
        System.out.println("Digite sua senha para desbloquear a resposta: ");
        senhaTentativa = leitura.nextInt();
        
        if (senhaTentativa == senhaMestre){
            System.out.println("O resultado da soma Ã©: "+soma);
            
        }else{
            System.out.println("Senha Incorreta!");
        }
        
        
    }
    
}
